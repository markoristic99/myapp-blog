<hr>
<h5  class = " font-weight-normal">Add Comment</h5>
    
<%= form_for([@post, @post.comments.build])do |f|%>

    <p>

        <%= f.text_field :username, :placeholder => "username"%>
    </p>

    <p>
        <%= f.text_area(:body, {:class => 'form-control', :id => "form_textarea", :placeholder => "comment here..."})%>
    </p>

    <p>
        <%= f.submit("Save", {:class => 'btn btn-outline-primary ml-md-auto'}) %>
    </p>
<%end%>