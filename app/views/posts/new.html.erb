<div class = "container-fluid m-2 pt-2">
    <h1> New Post</h1>
    
    <%= form_for :post, url: posts_path do |f|%>
        <% if @post.errors.any? %>
            <% @post.errors.full_messages.each do |msg|%>
                <div class="a1ert alert-danger"><%= msg%></div>
            <%end%>
        <%end%>

        <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </p>

        <p>
            <%= f.label :body, "Text" %><br>
            <%= f.text_area(:body, {:class => 'form-control'})%>
        </p>

        <p>
            <%= f.submit("Save Post", {:class => 'btn btn-primary'}) %>
        </p>
    <%end%>
</div>